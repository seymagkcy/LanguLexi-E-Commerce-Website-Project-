@{
	ViewData["Title"] = "Şifre Değiştir";
}

<div class="row">
	<div class="col-md-4 m-auto my-5">
		<h1>Şifre Değiştir</h1>
		<hr />
		<form asp-action="ChangePassword">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" name="user" value="@Context.Request.Query["user"]" />

			<div class="form-group">
				<label for="Password" class="control-label">Yeni şifreyi giriniz</label>
				<input name="Password" type="password" class="form-control" required />
			</div>

			<div class="form-group mt-2">
				<input type="submit" value="Şifre Güncelle" class="btn btn-primary"/>
			</div>
		</form>
	</div>
</div>